<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Star8Test.UnderLineLabel">
    <ContentView.Content>  
       <StackLayout  Grid.Row="0" Padding="0" VerticalOptions="Center">  
           <Label x:Name="customLabel" 
                  Text="{Binding Text, Mode=TwoWay}" 
                  FontSize="Micro"
                  TextColor="{Binding TextColor,Mode=TwoWay}"/>  
           <BoxView x:Name="customBox"   
                    BackgroundColor="{Binding LineColor,Mode=TwoWay}"  
                    HeightRequest="1"   
                    Margin="0,-8,0,0" />  
       </StackLayout>  
    </ContentView.Content>  
</ContentView>
